<%- include('template/cabecera', {tituloWeb: 'Página inicio' }) %>

    <div class="container">

        <h1>CRUD MongoDB</h1>

        <a class="btn btn-success btn-block my-4" href="/mascotas/crear">
            crear mascota
        </a>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Descripción</th>
                    <th scope="col">Acción</th>
                </tr>
            </thead>
            <!-- usar mongodb(1 cluster gratis) o mysql, etc -->
            <tbody>

                <% if (arrayMascotas.length> 0) { %>
                    <% arrayMascotas.forEach(mascota=> { %>

                        <tr>
                            <th scope="row"><%= mascota.id %></th>
                            <td><%= mascota.nombre %></td>
                            <td><%= mascota.descripcion %></td>
                            <td>
                                <a href="mascotas/<%= mascota.id %>" class="btn btn-warning btn-sm">Editar</a>
                            </td>
                        </tr>

                    <% }) %>
                <% } %>

            </tbody>
        </table>
    </div>

    <%- include('template/footer') %>